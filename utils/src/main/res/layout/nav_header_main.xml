<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileNavHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarProfileNavHeader"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="start|top"
        android:layout_marginTop="@dimen/_16sdp"
        app:civ_border_color="@color/blueExtraLight"
        app:civ_border_width="2dp"
        tools:src="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/usernameNavHeader"
        style="@style/Text.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:gravity="start"
        android:textColor="@color/blueExtraLight"
        android:textSize="@dimen/_14ssp"
        tools:text="Aleksey Skvortsov" />

</LinearLayout>