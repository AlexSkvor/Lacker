<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:endColor="@color/darkBrown" android:gradientRadius="90%p" android:startColor="@color/brownExtraLight" android:type="radial" />
                    <corners android:radius="@dimen/_4sdp" />
                </shape>
            </item>

            <item android:gravity="center" android:left="@dimen/_4sdp" android:right="@dimen/_4sdp">
                <shape android:shape="line">
                    <stroke android:width="@dimen/_3sdp" android:color="@color/white" />
                    <corners android:radius="1dp" />
                </shape>
            </item>
        </layer-list>

    </item>


    <item android:state_enabled="false">

        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/grey" />
                    <corners android:radius="@dimen/_4sdp" />
                </shape>
            </item>

            <item android:gravity="center" android:left="@dimen/_4sdp" android:right="@dimen/_4sdp">
                <shape android:shape="line">
                    <stroke android:width="@dimen/_3sdp" android:color="@color/white" />
                    <corners android:radius="1dp" />
                </shape>
            </item>
        </layer-list>

    </item>


    <item>

        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/brownLight" />
                    <corners android:radius="@dimen/_4sdp" />
                </shape>
            </item>

            <item android:gravity="center" android:left="@dimen/_4sdp" android:right="@dimen/_4sdp">
                <shape android:shape="line">
                    <stroke android:width="@dimen/_3sdp" android:color="@color/white" />
                    <corners android:radius="1dp" />
                </shape>
            </item>
        </layer-list>

    </item>
</selector>