<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_brown_rounded_corners"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/_8sdp"
    android:paddingVertical="@dimen/_8sdp"
    android:weightSum="22">

    <TextView
        android:id="@+id/menuTab"
        style="@style/Text.Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/menuScreenTitle"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_7ssp"
        app:drawableTopCompat="@drawable/ic_baseline_menu_book_24" />

    <TextView
        android:id="@+id/favouriteTab"
        style="@style/Text.Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/favouriteScreenTitle"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_7ssp"
        app:drawableTopCompat="@drawable/ic_baseline_favorite_border_24" />

    <TextView
        android:id="@+id/basketTab"
        style="@style/Text.Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/basketScreenTitle"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_7ssp"
        app:drawableTopCompat="@drawable/ic_outline_shopping_basket_24" />

    <TextView
        android:id="@+id/orderTab"
        style="@style/Text.Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/orderScreenTitle"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_7ssp"
        app:drawableTopCompat="@drawable/ic_baseline_list_24" />

</LinearLayout>