<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/suborderContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemSuborderDateTimeTitle"
            style="@style/Text.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:ellipsize="end"
            android:textSize="@dimen/_16ssp"
            tools:text="Ordered at 21:03" />

        <TextView
            android:id="@+id/itemSuborderClient"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:ellipsize="end"
            android:gravity="start"
            android:textColor="@color/brownLight"
            android:textSize="@dimen/_14ssp"
            tools:text="Client: Aleksey Skvortsov" />

        <TextView
            android:id="@+id/itemSuborderTable"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:ellipsize="end"
            android:gravity="start"
            android:textColor="@color/brownLight"
            android:textSize="@dimen/_14ssp"
            tools:text="Table: 1" />

        <TextView
            android:id="@+id/itemSuborderComment"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:gravity="start"
            android:textColor="@color/brownLight"
            android:textSize="@dimen/_14ssp"
            tools:text="Comment: comment from user" />

        <TextView
            android:id="@+id/itemSuborderDishNumber"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:gravity="start"
            android:textColor="@color/brownLight"
            android:textSize="@dimen/_14ssp"
            tools:text="Dish number: 7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/itemSuborderViewButton"
                style="@style/App.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_weight="1"
                android:text="@string/view" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/itemSuborderButton"
                style="@style/App.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_weight="1"
                android:text="@string/accept" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>