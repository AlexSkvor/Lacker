<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dateTimeTitle"
        style="@style/Text.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_brown_top_rounded_corners"
        android:ellipsize="end"
        android:paddingVertical="@dimen/_12sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        tools:text="Created at 23:55 14 Nov 2020" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brownExtraLight"
        android:orientation="vertical">

        <TextView
            android:id="@+id/commentText"
            style="@style/Text.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="start"
            android:textColor="@color/veryDarkGrey"
            android:textSize="@dimen/_11ssp"
            tools:text="You left no comment" />

        <TextView
            android:id="@+id/drinksFlagText"
            style="@style/Text.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:gravity="start"
            android:textColor="@color/veryDarkGrey"
            android:textSize="@dimen/_11ssp"
            tools:text="Drinks asap: Yes" />

    </LinearLayout>
</LinearLayout>