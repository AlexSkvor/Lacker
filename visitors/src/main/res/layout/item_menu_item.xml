<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="8dp">

    <ImageView
        android:id="@+id/favouriteMarkerMenuItem"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_gravity="top|end"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:contentDescription="@string/stub"
        android:background="?attr/actionBarItemBackground"
        app:tint="@color/blueLight"
        tools:src="@drawable/ic_baseline_favorite_border_24" />

    <LinearLayout
        android:id="@+id/menuItemVerticalContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menuItemName"
            style="@style/Text.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:ellipsize="end"
            android:textSize="@dimen/_16ssp"
            tools:text="Menu item name." />

        <ImageView
            android:id="@+id/menuItemPicture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:contentDescription="@string/stub" />

        <TextView
            android:id="@+id/menuItemDescription"
            style="@style/Text.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="3"
            android:textSize="@dimen/_12ssp"
            tools:text="Short Item description" />

        <LinearLayout
            android:id="@+id/portionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:orientation="vertical" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>