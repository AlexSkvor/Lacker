<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeNoActionBar.Launcher" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorPrimaryDark">@color/absoluteTransparent</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>


    <style name="App.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="cornerRadius">4000dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="InputStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/hintTextColor</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="boxStrokeColor">@color/transparent_border_input_layout_selector</item>
        <item name="boxStrokeErrorColor">@color/errorColor</item>
        <item name="errorIconTint">@color/errorColor</item>
        <item name="errorTextColor">@color/errorColor</item>
    </style>


    <style name="InputStyle.NoTopHint" parent="InputStyle">
        <item name="hintEnabled">false</item>
    </style>

    <style name="InputStyle.NoTopHint.PasswordToggle" parent="InputStyle.NoTopHint">
        <item name="passwordToggleEnabled">true</item>
    </style>


    <style name="EditTextStyle" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="EditTextStyle.SingleLine" parent="EditTextStyle">
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditTextStyle.SingleLine.Email" parent="EditTextStyle.SingleLine">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditTextStyle.SingleLine.Password" parent="EditTextStyle.SingleLine">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAutoSize">
        <item name="android:textColor">@color/textColor</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/_6ssp</item>
        <item name="autoSizeMaxTextSize">@dimen/_16ssp</item>
    </style>

    <style name="TextAutoSize.Clickable" parent="TextAutoSize">
        <item name="android:textColor">@color/text_color_with_press_reaction</item>
    </style>

    <style name="Text.Regular" parent="Text">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Text.Regular.Italic" parent="Text">
        <item name="android:fontFamily">@font/montserrat_regular_italic</item>
    </style>

    <style name="Text.Medium" parent="Text">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Text.Medium.Italic" parent="Text">
        <item name="android:fontFamily">@font/montserrat_medium_italic</item>
    </style>

    <style name="Text.Bold" parent="Text">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="NavigationDrawerText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>


    <style name="ChipFilter" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_filter_bg_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>